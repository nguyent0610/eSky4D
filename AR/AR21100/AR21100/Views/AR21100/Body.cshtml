@using Ext.Net;
@using Ext.Net.MVC;
@using HQ.eSkyFramework;
@using HQ.eSkyFramework.HQControl;
@using AR21100;
@{
    Layout = null;
    var X = Html.X();
    var HQ = Html.HQ();
}

@(X.Viewport()
.Layout(LayoutType.Fit)
.Items(
    X.FormPanel()
    .ID("frmMain")
    .BodyPadding(0)
    .KeyMap(Util.SetupKeyMap())
    .TopBar(Util.SetupToolbar("Print", true, ""))
    .Layout(LayoutType.Fit)
    .Items(
        ////Thiet ke giao dien o day
        X.GridPanel()
        .Scroll(ScrollMode.Both)
        .View(X.GridView().TrackOver(false))
        .ID("grdChannel")
        .Store
        (
            X.Store()
            .ID("stoChannel")
            .PageSize(50)
            .Model(Util.GenerateModel(typeof(AR21100_pgLoadChannel_Result), "mdlAR21100_pgLoadChannel", "Code"))
            .ServerProxy(X.AjaxProxy().Url(Url.Action("GetChannel"))).AutoLoad(false)
            .Listeners(l =>
            {
            //    l.BeforeLoad.Fn = "stoBeforeLoad";
                l.Load.Fn = "stoLoad";
                l.Update.Fn = "stoChanged";                 
            })
         )
        .Listeners(p =>
        {
            p.BoxReady.Handler = "firstLoad();";
        })
        .SortableColumns(false)
        .ColumnModel
        (X.RowNumbererColumn()
        .Width(40)
        ,X.Column()
            .ID("Code")
            .Text(Util.GetLang("AR21100_Code")) // mã kênh bán hàng
            .DataIndex("Code")
            .Width(150)
            .Editor(Html.X()
            .TextField()
            .MaxLength(10)
            .EnforceMaxLength(true))
        ,X.Column()
                .Text(Util.GetLang("Descr")) // Diễn giãi
                .DataIndex("Descr")
                .Width(250)
                .Editor(Html.X()
                .TextField()
                .MaxLength(200)
                .EnforceMaxLength(true))
                    
        ,X.Column()
            .Text(Util.GetLang("AR21100_ChannelType")) // Loại kênh
            .ID("colChannelType")
            .DataIndex("Type")
            .Width(150)
            .Renderer("renderTypeName")
            .Editor(
                HQ.Combo()
                .ID("cboChannelType")
                .Name("cboChannelType")
                .HQProcedure("AR21100_pcChannelType")
                .HQColumnShow("Code,Descr")
                .DisplayField("Descr")
                .ValueField("Code")
                .HQHeightWidth(500, 400)
                .ForceSelection(true)
                .HQParam(new StoreParameterCollection() 
                { 
                    new StoreParameter() { Name = "@CpnyID", Value = "HQ.cpnyID", Mode = ParameterMode.Raw }
                    ,new StoreParameter() { Name = "@UserName", Value = "HQ.userName", Mode = ParameterMode.Raw }
                    ,new StoreParameter() { Name = "@LangID", Value = "HQ.langID", Mode = ParameterMode.Raw }
                })
                .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                .Listeners(lst =>
                {
                    lst.TriggerClick.Handler = "if (index == 0) { this.clearValue();}";
                })
                .LoadData()
                )
        ,X.CommandColumn()
            .Width(150)
            .Commands
            (
                X.GridCommand()
                .Text(Util.GetLang("Reject"))
                .ToolTip(t => t.Text = Util.GetLang("Rejectrowchanges")) // Reject
                .CommandName("reject")
                .Icon(Icon.ArrowUndo)
            )
            .PrepareToolbar(t => t.Handler = "toolbar.items.get(0).setVisible(record.dirty);")
            .Listeners(l => l.Command.Handler = "grdChannel_Reject(record);")
        )
        .SelectionModel(X.RowSelectionModel().ID("slmChannel").Mode(SelectionMode.Multi))
            .Listeners(lst => lst.Select.Fn = "slmTerritory_Channel")
        .BottomBar(
            X.PagingToolbar()
            .Items(
                X.Label("Page size:"),
                X.ToolbarSpacer(10),
                X.ComboBox()
                .Width(80)
                .Items("1", "2", "10", "20", "30", "50")
                .SelectedItems("50")
                .Listeners(l =>
                    {
                        l.Select.Fn = "HQ.grid.onPageSelect";                   
                    })
            )
            .Plugins(X.ProgressBarPager())
        )
        .Plugins
        (
            X.CellEditing()
            .ClicksToEdit(1)
            .Listeners(ls =>
            {
                ls.BeforeEdit.Fn = "grdChannel_BeforeEdit";
                ls.Edit.Fn = "grdChannel_Edit";
                ls.ValidateEdit.Fn = "grdChannel_ValidateEdit";

            })
        )
        .Features
        (
            X.GridFilters()
                .Local(true)
                .Filters
                (
                   X.StringFilter().DataIndex("Code"),
                   X.StringFilter().DataIndex("Descr")
                )
        )
    )
)
)
