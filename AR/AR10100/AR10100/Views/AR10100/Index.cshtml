<script>
    var isAllValid = function (items) {
        if (items != undefined) {
            for (var i = 0; i < items.length; i++) {
                if (items[i]["LineType"] == undefined)
                    continue;
                if (items[i]["LineType"] == "")
                    continue;

                if (items[i]["LineType"].trim() == "") {
                    callMessage(15, '@Util.GetLang("LineType")', null);
                return false;
            }
            //if (items[i]["InvtID"].trim() == "") {
            //    callMessage(15, '@Util.GetLang("InvtID")', null);
            //    return false;
            //}
            if (items[i]["LineType"].trim() != "" && items[i]["Qty"] == 0) {
                callMessage(15, '@Util.GetLang("Qty")', null);
                return false;
            }
            if (items[i]["LineType"].trim() != "" && items[i]["UnitPrice"] == 0) {
                callMessage(15, '@Util.GetLang("UnitPrice")', null);
                return false;
            }



        }
        return true;
    }
    else {
        return true;
    }
    };

</script>
