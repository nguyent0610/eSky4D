                                                ls.Edit.Fn = "grd_Edit";
                                                ls.ValidateEdit.Fn = "grd_ValidateEdit";
                                                ls.CancelEdit.Fn = "grd_CancelEdit";


                                            })        
                                    )
                                    .Features(
                                            Html.X().GridFilters()//Filter
                                                .Local(true)
                                                      .Filters(
                                                          Html.X().StringFilter().DataIndex("Location"),
                                                          Html.X().StringFilter().DataIndex("Descr")                                                        
                                                      )
                                              
                                        )
       

                    )
                )
           )
