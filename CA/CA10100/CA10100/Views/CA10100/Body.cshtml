@using Ext.Net;
@using Ext.Net.MVC;
@using HQ.eSkyFramework;
@using HQ.eSkyFramework.HQControl;
@using CA10100;
@{
    Layout = null;
    var X = Html.X();
    var HQ = Html.HQ();
}

@(X.Viewport().Layout(LayoutType.Fit)
    .Items(
        X.FormPanel()
        .ID("frmMain")
        .BodyPadding(0)
        .KeyMap(Util.SetupKeyMap())
        .TopBar(Util.SetupToolbar("Print", true, ""))
        .FieldDefaults(act => { act.LabelAlign = LabelAlign.Right; act.LabelWidth = 120; })
        .Layout(LayoutType.Border)
        .Listeners(p =>
        {
            p.BoxReady.Fn = "firstLoad";
            p.FieldChange.Fn = "frmChange";
        })
        .Items(
        ////Thiet ke giao dien o day
            X.Panel().ID("Header").Region(Region.North).Layout(LayoutType.VBox).AutoScroll(true)
            .Listeners(lst =>
            {
                lst.Render.Handler = "HQ.common.control_render(this,'header')";
            })
            .Items(
                X.Container().Layout(LayoutType.HBox).MarginSpec("0 0 5 0")
                .Items(
                    HQ.Combo().ID("cboBranchID").HQLangCode("BranchID").AllowBlank(false).Tag("X")
                        .HQProcedure("CA10100_pcBranchAllByUser").HQAutoLoad(true)
                        .HQColumnShow("BranchID,BranchName").ForceSelection(true)
                        .DisplayField("BranchID")
                        .ValueField("BranchID")
                        .HQHeightWidth(400, 300)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .Listeners(lst =>
                                {
                                    lst.Change.Fn = "cboBranchID_Change";
                                    lst.Select.Fn = "cboBranchID_Select";
                                    lst.TriggerClick.Handler = "if (index == 0) { this.focus(true);this.clearValue(); }";
                                    lst.Focus.Handler = "this.forceSelection=true;";
                                })
                        .LoadData()
                    , HQ.Combo().ID("cboBatNbr").HQLangCode("BatNbr").Tag("X")
                        .HQProcedure("CA10100_pcBatNbr").HQAutoLoad(false)
                        .HQColumnShow("BatNbr,TranDate,PayerReceiver,TotAmt,Type,Status,Crtd_User,LUpd_User").ForceSelection(true)
                        .DisplayField("BatNbr")
                        .ValueField("BatNbr")
                        .HQHeightWidth(400, 400)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@BranchID", Value ="App.cboBranchID.getValue()", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .Listeners(lst =>
                                {
                                    lst.Change.Fn = "cboBatNbr_Change";
                                    lst.Select.Fn = "cboBatNbr_Select";
                                    lst.TriggerClick.Handler = "if (index == 0) { this.focus(true);this.clearValue(); }";
                                    lst.Focus.Handler = "this.forceSelection=true;";
                                })
                        .LoadData()
                    , HQ.Combo().ID("cboStatus").HQLangCode("Status").Name("Status").ReadOnly(true).Tag("X")
                        .HQProcedure("CA10100_pcStatus").HQAutoLoad(true)
                        .HQColumnShow("Descr").ForceSelection(true)
                        .DisplayField("Descr")
                        .ValueField("Code")
                        .HQHeightWidth(400, 400)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .LoadData()
                )
                , X.Container().Layout(LayoutType.HBox).MarginSpec("0 0 5 0")
                .Items(
                    HQ.TextBox().ID("txtRvdBatNbr").HQLangCode("CancelledBatNbr").Name("RvdBatNbr").ReadOnly(true).Tag("X")
                    , HQ.DateField().ID("dteDate").HQLangCode("Date").Name("DateEnt")
                    , HQ.Combo().ID("cboHandle").HQLangCode("Handle").Tag("X")
                        .HQProcedure("CA10100_pcHandle").HQAutoLoad(true)
                        .HQColumnShow("Descr").ForceSelection(true)
                        .DisplayField("Descr")
                        .ValueField("Code")
                        .HQHeightWidth(400, 400)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .Listeners(lst =>
                                {
                                    lst.TriggerClick.Handler = "if (index == 0) { this.focus(true);this.clearValue(); }";
                                })
                        .LoadData()
                )
                , X.Container().Layout(LayoutType.HBox).MarginSpec("0 0 5 0")
                .Items(
                    HQ.Combo().ID("cboBankAcct").HQLangCode("BankAcct").Name("BankAcct").AllowBlank(false)
                        .HQProcedure("CA10100_pcBankAcct").HQAutoLoad(true)
                        .HQColumnShow("BankAcct,CashAcctName,AcctNbr").ForceSelection(true)
                        .DisplayField("BankAcct")
                        .ValueField("BankAcct")
                        .HQHeightWidth(400, 400)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .LoadData()
                    , HQ.Combo().ID("cboType").HQLangCode("Type").Name("Type").AllowBlank(false)
                        .HQProcedure("CA10100_pcType").HQAutoLoad(true)
                        .HQColumnShow("Descr").ForceSelection(true)
                        .DisplayField("Descr")
                        .ValueField("Code")
                        .HQHeightWidth(400, 400)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .LoadData()

                    , HQ.TextBox().ID("txtRefNbr").HQLangCode("RCTPPAIDNBR").Name("RefNbr").MaxLength(10).MaxLength(10).EnforceMaxLength(true).Tag("X")

                )
                , X.Container().Layout(LayoutType.HBox).MarginSpec("0 0 5 0")
                .Items(
                   HQ.TextBox().ID("txtDescr").HQLangCode("Name").Name("Descr").Width(553).MaxLength(100).EnforceMaxLength(true)
                   , HQ.NumberField().ID("txtTotal").HQLangCode("Total").Name("TotAmt").DecimalPrecision(0).ReadOnly(true).Tag("X").SelectOnFocus(true)
               )

               ,HQ.TextBox().ID("txtAddress").HQLangCode("Address").Name("Address").Width(553).MaxLength(100).EnforceMaxLength(true)
                 
                  
            )
            , X.GridPanel().Region(Region.Center).Layout(LayoutType.Fit)
            .Listeners(lst =>
            {
                lst.Render.Handler = "HQ.common.control_render(this,'grdDetail')";
            })
            .Scroll(ScrollMode.Both)
            .View(Html.X().GridView().StripeRows(true))
            .RowLines(true).ColumnLines(true)
            .ID("grdDetail")
            .SelectionMemory(false)
            .Store(
                X.Store()//Data Source
                .ID("stoDetail")
                .PageSize(50)//Phan trang
                .Model(Util.GenerateModel(typeof(CA10100_pgDetail_Result), "mdlDetail", ""))
                .ServerProxy(X.AjaxProxy().Url(Url.Action("GetDetail")).Timeout(int.MaxValue)).AutoLoad(false)
                .Parameters(ps =>
                {
                    ps.Add(new StoreParameter("BranchID", "App.cboBranchID.getValue()", ParameterMode.Raw));
                    ps.Add(new StoreParameter("BatNbr", "App.cboBatNbr.getValue()", ParameterMode.Raw));
                })
                .Listeners(l =>
                {
                    l.Load.Fn = "stoData_Load";                  
                })
            )
            .SortableColumns(false)
            .ColumnModel(//Column
                X.RowNumbererColumn().Width(40)
                , X.Column().Text(Util.GetLang("EntryID")).DataIndex("EntryID").Width(150)
                    .Editor(
                        HQ.Combo().ID("cboEntryID")
                        .HQProcedure("CA10100_pcEntryType_Active").HQAutoLoad(true)
                        .HQColumnShow("EntryID,Descr").ForceSelection(true)
                        .DisplayField("EntryID")
                        .ValueField("EntryID")
                        .HQHeightWidth(400, 400)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .LoadData()
                    )
                , X.Column().Text(Util.GetLang("Descr")).DataIndex("TranDesc").Width(150)
                    .Editor(X.TextField().MaxLength(200).EnforceMaxLength(true).SelectOnFocus(true))

                , X.NumberColumn().Text(Util.GetLang("CrTot")).DataIndex("TranAmt").Width(150).Align(Alignment.Right).Format("#,###")
                    .Editor(X.NumberField().DecimalPrecision(0).SelectOnFocus(true).MinValue(0))
                , X.Column().Text(Util.GetLang("CustID")).DataIndex("CustID").Width(150)
                    .Editor(
                        HQ.Combo().ID("cboCustID")
                        .HQProcedure("CA10100_pcCustomer").HQAutoLoad(true)
                        .HQColumnShow("CustID,CustName,Addr").ForceSelection(true)
                        .DisplayField("CustID")
                        .ValueField("CustID")
                        .HQHeightWidth(400, 400)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@BranchID", Value ="App.cboBranchID.getValue()", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .LoadData()
                    )
                , X.Column().Text(Util.GetLang("VendID")).DataIndex("VendID").Width(150)
                    .Editor(
                        HQ.Combo().ID("cboVendID")
                        .HQProcedure("CA10100_pcVendor").HQAutoLoad(true)
                        .HQColumnShow("VendID,Name,Addr").ForceSelection(true)
                        .DisplayField("VendID")
                        .ValueField("VendID")
                        .HQHeightWidth(400, 400)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .LoadData()
                    )
                , X.Column().Text(Util.GetLang("EmployeeID")).DataIndex("EmployeeID").Width(150)
                    .Editor(
                        HQ.Combo().ID("cboEmployeeID")
                        .HQProcedure("CA10100_pcSales").HQAutoLoad(true)
                        .HQColumnShow("SlsperID,Name").ForceSelection(true)
                        .DisplayField("SlsperID")
                        .ValueField("SlsperID")
                        .HQHeightWidth(400, 400)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@BranchID", Value ="App.cboBranchID.getValue()", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .LoadData()
                    )

                , X.Column().Text(Util.GetLang("Transportation")).DataIndex("Transportation").Width(150)
                    .Editor(
                        HQ.Combo().ID("cboTransportation")
                        .HQProcedure("CA10100_pcTransportation").HQAutoLoad(true)
                        .HQColumnShow("Transportation,Descr").ForceSelection(true)
                        .DisplayField("Transportation")
                        .ValueField("Transportation")
                        .HQHeightWidth(400, 400)
                        .HQParam(new StoreParameterCollection() {
                                        new StoreParameter() { Name = "@CpnyID", Value ="HQ.cpnyID", Mode = ParameterMode.Raw},
                                         new StoreParameter() { Name = "@LangID", Value ="HQ.langID", Mode = ParameterMode.Raw},
                                          new StoreParameter() { Name = "@UserName", Value ="HQ.userName", Mode = ParameterMode.Raw}
                                })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                        .LoadData()
                    )

                , X.CommandColumn().Width(150)
                    .Commands(
                        X.GridCommand()
                        .Text(Util.GetLang("Reject"))
                        .ToolTip(t => t.Text = Util.GetLang("Rejectrowchanges"))
                        .CommandName("reject")
                        .Icon(Icon.ArrowUndo)
                    )
                    .PrepareToolbar(t => t.Handler = "toolbar.items.get(0).setVisible(record.dirty);")
                    .Listeners(l => l.Command.Handler = "grdDetail_Reject(record);")
            )
            .SelectionModel(X.RowSelectionModel().ID("slmDetail").Mode(SelectionMode.Multi))
            .BottomBar(//Phan trang
                X.PagingToolbar()
                .Items(
                    X.Label("Page size:"),
                    X.ToolbarSpacer(10),
                    X.ComboBox()
                    .Width(80)
                    .Items("1", "2", "10", "20", "30", "50")
                    .SelectedItems("50")
                    .Listeners(l =>
                    {
                        l.Select.Fn = "HQ.grid.onPageSelect";
                    })
                ).HideRefresh(true)
                .Plugins(X.ProgressBarPager())
            )
            .Plugins(
                X.CellEditing()
                .ClicksToEdit(1)
                .Listeners(ls =>
                {
                    ls.BeforeEdit.Fn = "grdDetail_BeforeEdit";
                    ls.Edit.Fn = "grdDetail_Edit";
                    ls.ValidateEdit.Fn = "grdDetail_ValidateEdit";

                })
            )

            .Features(
                X.GridFilters()
                    .Local(true)
                    .Filters(
                        X.StringFilter().DataIndex("EntryID"),
                        X.StringFilter().DataIndex("TranDesc"),
                        X.StringFilter().DataIndex("TranAmt"),
                        X.StringFilter().DataIndex("CustID"),
                        X.StringFilter().DataIndex("VendID"),
                        X.StringFilter().DataIndex("EmployeeID"),
                        X.StringFilter().DataIndex("Transportation")
                    )
            )

        )//giao dien
    )
)