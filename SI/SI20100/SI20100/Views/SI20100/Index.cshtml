<script>
    //check value
    var isAllValid = function (items) {
        if (items != undefined) {
            for (var i = 0; i < items.length; i++) {
                if (items[i]["Buyer"] == undefined) continue;
            
                if (items[i]["Buyer"].trim() == "") {
                callMessage(15, '@Util.GetLang("Buyer")', null);
                    return false;
                }
                if (items[i]["BuyerName"].trim() == "") {
                    callMessage(15, '@Util.GetLang("BuyerName")', null);
                    return false;
                }
            }
            return true;
        } else {
            return true;
        }
    };

</script>
