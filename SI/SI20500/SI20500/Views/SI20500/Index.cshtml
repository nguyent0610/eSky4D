<script>
    //check value
    var isAllValid = function (items) {
        if (items != undefined) {
            for (var i = 0; i < items.length; i++) {

                
                if (items[i]["Country"] == undefined && items[i]["State"] == undefined && items[i]["City"] == undefined) continue;
                if (items[i]["Country"] == "" && items[i]["State"] == "" && items[i]["City"] == "") continue;
                if (items[i]["Country"].trim() == "") {
                callMessage(15, '@Util.GetLang("Country")', null);
                    return false;


                }
                if (items[i]["State"].trim() == "") {
                    callMessage(15, '@Util.GetLang("State")', null);
                    return false;
                }
                if (items[i]["City"].trim() == "") {
                    callMessage(15, '@Util.GetLang("City")', null);
                    return false;
                }
                if (items[i]["Name"].trim() == "") {
                    callMessage(15, '@Util.GetLang("Name")', null);
                    return false;
                }
                

           
            



        }
        return true;
    } else {
        return true;
    }
    };





</script>
