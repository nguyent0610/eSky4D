@using Ext.Net;
@using Ext.Net.MVC;
@using HQ.eSkyFramework;
@using HQ.eSkyFramework.HQControl;
@using SI21600;

@model System.Collections.IEnumerable
@{
    Layout = null;
    var X = Html.X();
    ViewBag.Title = "SI21600";
    var acc = Session["SI21600"] as AccessRight;
}
<!DOCTYPE html>
<html>
 <!--Không thay đổi phần head Đổi mã màn hình SI21600.js tùy theo màn hình đổi lại-->
<head>
    <meta name="viewport" content="width=device-width" />
    <script src='@Url.Content("Scripts/hq.language"+Current.LangID+".js")' type="text/javascript"></script>
    <script src='@Url.Content("Scripts/hq.common.js")' type="text/javascript"></script>
    <script src='@Url.Content("Scripts/Screen/SI21600.js")' type="text/javascript"></script>
    <style>
        .x-grid-row-over .x-grid-cell-inner {
            font-weight : bold;
        }
    </style>
    <script>
        HQ.cpnyID = '@Current.CpnyID';
        HQ.langID = '@Current.LangID';
        HQ.userName = '@Current.UserName';
        HQ.isUpdate = HQ.util.toBool('@acc.Update.ToString()');
        HQ.isInsert = HQ.util.toBool('@acc.Insert.ToString()');
        HQ.isDelete = HQ.util.toBool('@acc.Delete.ToString()');
        var _dateServer = '@DateTime.Now.ToString("MM/dd/yyyy")';
    </script>  
    <title>@ViewBag.Title</title>
</head>
<body>   
    @(X.ResourceManager().Theme((Theme)Enum.Parse(typeof(Theme),Current.Theme.PassNull()==""?"Gray":Current.Theme.PassNull())))
        @X.GridFilters()<!--Khi cache cho grid-->
        @X.ProgressBarPager()<!--Khi cache cho grid -->   
        @(Html.X().Store().ID("stoSI_Hierarchy").AutoLoad(false)
        .Model(Util.GenerateModel(typeof(SI_Hierarchy), "mdlSI_Hierarchy", "NodeID"))
        .Proxy(
            X.AjaxProxy()
            .Url(Url.Action("GetSI_Hierarchy", "SI21600"))
            .ActionMethods(action =>
            {
                action.Read = HttpMethod.POST;
            })
            .Reader(X.JsonReader().Root("data").TotalProperty("totaldata"))
        )
        .Parameters(ps =>
        {
            ps.Add(new StoreParameter("Type", "App.cboType.getValue()", ParameterMode.Raw));
            ps.Add(new StoreParameter("NodeID", "App.cboNodeID.getValue()", ParameterMode.Raw));
            ps.Add(new StoreParameter("NodeLevel", "_nodeLevel", ParameterMode.Raw));
            ps.Add(new StoreParameter("ParentRecordID", "_parentRecordID", ParameterMode.Raw));
        })
        .Listeners(p => 
            {
                p.BeforeLoad.Fn = "storeBeforeLoad";
                p.Load.Fn = "stoLoadHeader";
            })
          )
        <!-- Gọi hàm Body trong SI21600Controller để dựng view Body.cshtml, mục đích tạo cache. -->  
        @{Html.RenderAction("Body", new {lang=Current.LangID});}
</body>
</html>
 