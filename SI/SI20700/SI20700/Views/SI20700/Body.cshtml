@using Ext.Net;
@using Ext.Net.MVC;
@using HQ.eSkyFramework;
@using HQ.eSkyFramework.HQControl;
@using SI20700;
@{
    Layout = null;
    var X = Html.X();
    var HQ = Html.HQ();
}

@(X.Viewport()
.Layout(LayoutType.Fit)
.Items(
    X.FormPanel()
    .ID("frmMain")
    .BodyPadding(0)
    .KeyMap(Util.SetupKeyMap())
    .TopBar(Util.SetupToolbar("Print", true, ""))
    .Layout(LayoutType.Fit)
    .Items(
        ////Thiet ke giao dien o day

        X.GridPanel()
        .Scroll(ScrollMode.Both)
        .View(X.GridView().TrackOver(false))
        .ID("grdState")
        .Store(
            X.Store()
            .ID("stoState")
            .PageSize(50)
            .Model(Util.GenerateModel(typeof(SI20700_pgLoadState_Result), "mdlSI20700_pgLoadState", "Country,State"))
            .ServerProxy(X.AjaxProxy().Url(Url.Action("GetState"))).AutoLoad(false)
            .Listeners(l =>
            {
                l.BeforeLoad.Fn = "stoBeforeLoad";
                l.Load.Fn = "stoLoad";
                l.Update.Fn = "stoChanged";                 
            })
        )
        .Listeners(p =>
                 {
                     p.BoxReady.Handler = "firstLoad();";
                 })
        .SortableColumns(false)
        .ColumnModel(
            X.RowNumbererColumn().Width(40),
            X.Column().Text(Util.GetLang("Country")).DataIndex("Country").Width(150)
                            .Editor(
                                HQ.Combo().ID("cboCountry").Name("cboCountry").HQProcedure("SI20700_pcLoadCountryAll")
                                .HQColumnShow("CountryID,Descr").DisplayField("CountryID").ValueField("CountryID")
                                .Width(300).HQHeightWidth(500, 400).MarginSpec("5 0 0 0")
                                .AllowBlank(true).ForceSelection(true).HQDBSys(false)
                                .LoadData()
                            ),
            X.Column().ID("State").Text(Util.GetLang("State")).DataIndex("State").Width(150)
                    .Editor(Html.X().TextField().MaxLength(10).EnforceMaxLength(true)),
            X.Column().Text(Util.GetLang("Descr")).DataIndex("Descr").Width(150)
                    .Editor(Html.X().TextField().MaxLength(200).EnforceMaxLength(true)),
            X.Column().Text(Util.GetLang("Territory")).DataIndex("Territory").Width(150)
                    .Editor(
                        HQ.Combo().ID("cboTerritory").Name("cboTerritory").HQProcedure("SI20700_pcLoadTerritory")
                        .HQColumnShow("Territory,Descr").DisplayField("Territory").ValueField("Territory")
                        .Width(300).HQHeightWidth(500, 400).MarginSpec("5 0 0 0")
                        .AllowBlank(true).ForceSelection(true).HQDBSys(false)
                        .LoadData()
                    ),
            X.CommandColumn()
            .Width(150)
            .Commands(
                X.GridCommand()
                .Text(Util.GetLang("Reject"))
                .ToolTip(t => t.Text = Util.GetLang("Rejectrowchanges"))
                .CommandName("reject")
                .Icon(Icon.ArrowUndo)
            )
            .PrepareToolbar(t => t.Handler = "toolbar.items.get(0).setVisible(record.dirty);")
            .Listeners(l => l.Command.Handler = "grdState_Reject(record);")
        )
        .SelectionModel(X.RowSelectionModel().ID("slmState").Mode(SelectionMode.Multi))
        .BottomBar(
            X.PagingToolbar()
            .Items(
                X.Label("Page size:"),
                X.ToolbarSpacer(10),
                X.ComboBox()
                .Width(80)
                .Items("1", "2", "10", "20", "30", "50")
                .SelectedItems("50")
                .Listeners(l =>
                    {
                        l.Select.Fn = "HQ.grid.onPageSelect";                   
                    })
            )
            .Plugins(X.ProgressBarPager())
        )
        .Plugins(
            X.CellEditing()
            .ClicksToEdit(1)
            .Listeners(ls =>
            {
                ls.BeforeEdit.Fn = "grdState_BeforeEdit";
                ls.Edit.Fn = "grdState_Edit";
                ls.ValidateEdit.Fn = "grdState_ValidateEdit";

            })
        )

        .Features(
            X.GridFilters()
                .Local(true)
                .Filters(
                    X.StringFilter().DataIndex("Country"),
                    X.StringFilter().DataIndex("State"),
                    X.StringFilter().DataIndex("Descr"),
                    X.StringFilter().DataIndex("Territory")
                )
        )
    )
))
