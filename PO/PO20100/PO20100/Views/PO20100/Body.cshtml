                .View(X.GridView().TrackOver(false))
                .Region(Region.Center).Flex(1)
                .Store(
                     X.Store().AutoLoad(false)
                    .ID("stoPO_Price")
                    .PageSize(50)
                    .Model(Util.GenerateModel(typeof(PO20100_pgGetPOPrice_Result), "mdlPO_Price", "PriceID,InvtID"))
                    .Parameters(ps =>
