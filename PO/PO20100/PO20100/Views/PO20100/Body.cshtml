            .Listeners(p=>{
                p.Click.Fn = "btnExport_Click";
            })
        }, "Print", true, ""))
    .Layout(LayoutType.Border)
    .Listeners(l =>
    {
        l.BoxReady.Handler = "firstLoad()";
        l.FieldChange.Fn = "frmChange";
    })
