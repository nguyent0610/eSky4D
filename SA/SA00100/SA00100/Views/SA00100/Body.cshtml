@using Ext.Net;
@using Ext.Net.MVC;
@using HQ.eSkyFramework;
@using HQ.eSkyFramework.HQControl;
@using SA00100;
@{
    Layout = null;
    var X = Html.X();
    var HQ = Html.HQ();
}

@(X.Viewport()
.Layout(LayoutType.Fit)
.Items(
    X.FormPanel()
    .ID("frmMain")
    .BodyPadding(0)
    .KeyMap(Util.SetupKeyMap())
    .TopBar(Util.SetupToolbar("Print", true, ""))
    .Layout(LayoutType.Fit)   
    .Items(
        ////Thiet ke giao dien o day

        X.GridPanel()
        .Scroll(ScrollMode.Both)
        .View(X.GridView().TrackOver(false))
        .ID("grdSYS_Screen")
        .Store(
             X.Store()
            .ID("stoData")
            .PageSize(50)//.AutoLoad(true)
            .Model(Util.GenerateModel(typeof(SA00100_pgLoadGrid_Result), "mdlgrdSYS_Screen", "ScreenNumber"))
            .ServerProxy(X.AjaxProxy().Url(Url.Action("GetData")))
            .Listeners(l => { 
                l.BeforeLoad.Handler = "HQ.common.showBusy(true,HQ.common.getLang(\"loadingdata\"));"; 
                l.Load.Handler = "HQ.common.showBusy(false);"; 
            })
        )
        .Listeners(p => p.BoxReady.Handler = "App.stoData.reload();")
        .SortableColumns(false)
        .ColumnModel(
         X.RowNumbererColumn()
            , X.Column().Text(Util.GetLang("ScreenNumber")).DataIndex("ScreenNumber").Width(150).Editor(X.TextField().AllowBlank(false).MaxLength(7).EnforceMaxLength(true))
            , X.Column().Text(Util.GetLang("Descr")).DataIndex("Descr").Width(250).Editor(X.TextField().AllowBlank(false).MaxLength(100).EnforceMaxLength(true))
            , X.Column().Text(Util.GetLang("ModuleID")).Width(150).DataIndex("ModuleID")
                .Editor(
                    HQ.Combo().ID("cboModuleID").Name("cboModuleID").HQProcedure("SA00100_pcGetScreenModuleIDName")
                    .HQColumnShow("ModuleID,ModuleName").DisplayField("ModuleID").ValueField("ModuleID")
                    .HQHeightWidth(500, 400)
                    .HQParam(new StoreParameterCollection() { 
                    new StoreParameter("@UserID", Current.UserName, ParameterMode.Value)
                    }).HQDBSys(true).AllowBlank(false).Editable(false)
                    .LoadData()
                )
            , X.Column().Text(Util.GetLang("ScreenType")).Width(150).DataIndex("ScreenType")
                .Editor(
                    HQ.Combo().ID("cboScreenType").Name("cboScreenType").HQProcedure("SA00100_pcGetScreenType")
                    .HQColumnShow("Code,Descr").DisplayField("Code").ValueField("Code")
                    .Width(300).HQHeightWidth(500, 400).MarginSpec("5 0 0 0")
                    .HQParam(new StoreParameterCollection() {                   
                    new StoreParameter("@LangID", Current.LangID.ToString(), ParameterMode.Value)
                    }).HQDBSys(true).AllowBlank(false).Editable(false)
                    .LoadData()
                )                  
            , X.Column().Text(Util.GetLang("SortNbr")).DataIndex("SortNbr").Width(150).Editor(X.TextField().AllowBlank(false).EnforceMaxLength(true))

            , X.Column().Text(Util.GetLang("CatID")).Width(150).DataIndex("CatID")
                .Editor(
                    HQ.Combo().ID("cboCatID").Name("cboCatID").HQProcedure("SA00100_pcGetScreenCatIDDescr")
                    .HQColumnShow("CatID,Descr").DisplayField("CatID").ValueField("CatID")
                    .Width(300).HQHeightWidth(500, 400).MarginSpec("5 0 0 0")
                    .HQParam(new StoreParameterCollection() {                       
                    new StoreParameter("@UserID", Current.UserName, ParameterMode.Value)
                    }).HQDBSys(true).AllowBlank(false).Editable(false)
                    .LoadData()
                )                         
            , X.Column().Text(Util.GetLang("ExecPath")).DataIndex("ExecPath").Width(150).Editor(X.TextField().AllowBlank(false).MaxLength(50).EnforceMaxLength(true))
            , X.CommandColumn().Width(150)
            .Commands(
                    X.GridCommand()
                    .Text(Util.GetLang("Reject"))
                    .ToolTip(t =>
                    {
                        t.Text = Util.GetLang("Rejectrowchanges");
                    })
                    .CommandName("reject")
                    .Icon(Icon.ArrowUndo)
            )
            .PrepareToolbar(t =>
            {
                t.Handler = "toolbar.items.get(0).setVisible(record.dirty);";
            })
            .Listeners(l =>
            {
                l.Command.Handler = "grdSYS_Screen_Reject(record);";
            })
        
        )
        .SelectionModel(X.RowSelectionModel().ID("slmData").Mode(SelectionMode.Multi))
        .BottomBar(
            X.PagingToolbar()
            .Items(
                X.Label("Page size:"),
                X.ToolbarSpacer(10),
                X.ComboBox()
                .Width(80)
                .Items("1", "2", "10", "20", "30", "50")
                .SelectedItems("50")
                .Listeners(l => l.Select.Fn = "HQ.grid.onPageSelect")
            )
            .Plugins(X.ProgressBarPager())
        )
        .Plugins(
            X.CellEditing()
            .ClicksToEdit(1)
            .Listeners(ls =>
            {
                ls.BeforeEdit.Fn = "grdSYS_Screen_BeforeEdit";
                ls.Edit.Fn = "grdSYS_Screen_Edit";
                ls.ValidateEdit.Fn = "grdSYS_Screen_ValidateEdit";
            })
        )

        .Features(
            X.GridFilters()
                .Local(true)
                .Filters(
                    X.StringFilter().DataIndex("ScreenNumber"),
                    X.StringFilter().DataIndex("Descr"),
                    X.StringFilter().DataIndex("ModuleID"),
                    X.StringFilter().DataIndex("ScreenType"),
                    X.StringFilter().DataIndex("SortNbr"),
                    X.StringFilter().DataIndex("CatID"),
                    X.StringFilter().DataIndex("ExecPath")
                )
        )
    )
))
