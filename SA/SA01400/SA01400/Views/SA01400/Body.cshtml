@using Ext.Net;
@using Ext.Net.MVC;
@using HQ.eSkyFramework;
@using HQ.eSkyFramework.HQControl;
@using SA01400;
@{
    Layout = null;
    var X = Html.X();
    var HQ = Html.HQ();
}

@(X.Viewport()
.Layout(LayoutType.Fit)
.Items(
    X.FormPanel()
    .ID("frmMain")
    .BodyPadding(0)
    .KeyMap(Util.SetupKeyMap())
    .TopBar(Util.SetupToolbar("Print,New,Delete,Save", true, ""))
    .Layout(LayoutType.Fit) 
    .Items(
        ////Thiet ke giao dien o day

        X.GridPanel()
        .Scroll(ScrollMode.Both)
        .View(X.GridView().TrackOver(false))
        .ID("grdSYS_BuildLog")
        .Store(
            X.Store()
            .ID("stoSYS_BuildLog")
            .PageSize(50)
            .Model(Util.GenerateModel(typeof(SA01400_pgSYS_BuildLog_Result), "mdlSA01400_pgSYS_BuildLog", "Code"))
            .ServerProxy(X.AjaxProxy().Url(Url.Action("GetSYS_BuildLog")))
            .Listeners(l => { 
                l.BeforeLoad.Handler = "HQ.common.showBusy(true,HQ.common.getLang(\"loadingdata\"));";
                l.Load.Handler = "HQ.common.showBusy(false);"; 
            })
        )
        .Listeners(p => p.BoxReady.Handler = "App.stoSYS_BuildLog.reload();")
        .SortableColumns(false)
        .ColumnModel(
            X.RowNumbererColumn().Width(40),
            X.Column().Text(Util.GetLang("Version")).DataIndex("Version").Width(150),
            X.Column().Text(Util.GetLang("BuildID")).DataIndex("BuildID").Width(150),
            X.Column().Text(Util.GetLang("Descr")).DataIndex("Descr").Width(150),
            X.Column().Text(Util.GetLang("AppliedDate")).DataIndex("AppliedDate").Width(150),
           X.CommandColumn()
            .Width(150)
            .Commands(
                X.GridCommand()
                .Text(Util.GetLang("Reject"))
                .ToolTip(t => t.Text = Util.GetLang("Rejectrowchanges"))
                .CommandName("reject")
                .Icon(Icon.ArrowUndo)
            )
            .PrepareToolbar(t => t.Handler = "toolbar.items.get(0).setVisible(record.dirty);")
        )
        .SelectionModel(X.RowSelectionModel().ID("slmSYS_BuildLog").Mode(SelectionMode.Multi))
        .BottomBar(
            X.PagingToolbar()
            .Items(
                X.Label("Page size:"),
                X.ToolbarSpacer(10),
                X.ComboBox()
                .Width(80)
                .Items("1", "2", "10", "20", "30", "50")
                .SelectedItems("50")
                .Listeners(l => l.Select.Fn = "HQ.grid.onPageSelect")
            )
            .Plugins(X.ProgressBarPager())
        )
        .Plugins(
            X.CellEditing()
            .ClicksToEdit(1)
            .Listeners(ls =>
            {
                
            })
        )

        .Features(
            X.GridFilters()
                .Local(true)
                .Filters(
                    X.StringFilter().DataIndex("Version"),
                    X.StringFilter().DataIndex("BuildID"),
                    X.StringFilter().DataIndex("Descr"),
                    X.StringFilter().DataIndex("AppliedDate")
                )
        )
    )
))
