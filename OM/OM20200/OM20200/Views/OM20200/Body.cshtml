@using Ext.Net;
@using Ext.Net.MVC;
@using HQ.eSkyFramework;
@using HQ.eSkyFramework.HQControl;
@using OM20200;
@{
    Layout = null;
    var X = Html.X();
    var HQ = Html.HQ();
}

@(X.Viewport()
.Layout(LayoutType.Fit)
.Items(
    X.FormPanel()
    .ID("frmMain")
    .BodyPadding(0)
    .KeyMap(Util.SetupKeyMap())
    .TopBar(Util.SetupToolbar("Print", true, ""))
    .Layout(LayoutType.Fit)
    .Items(
        ////Thiet ke giao dien o day

        X.GridPanel()
        .Scroll(ScrollMode.Both)
        .View(X.GridView().TrackOver(false))
        .ID("grdOM_PriceClass")
        .Store(
            X.Store()
            .ID("stoOM_PriceClass")
            .PageSize(50)
            .Model(Util.GenerateModel(typeof(OM20200_pgOM_PriceClass_Result), "mdlOM20200_pgOM_PriceClass", "PriceClassID"))
            .ServerProxy(X.AjaxProxy().Url(Url.Action("GetOM_PriceClass"))).AutoLoad(false)
            .Listeners(l =>
            {
                l.BeforeLoad.Fn = "stoBeforeLoad";
                l.Load.Fn = "stoLoad";
                l.Update.Fn = "stoChanged";
            })
        )
        .Listeners(p =>
                 {
                     p.BoxReady.Handler = "firstLoad();";
                 })
        .SortableColumns(false)
        .ColumnModel(
            X.RowNumbererColumn().Width(40),
            X.Column().ID("Code").Text(Util.GetLang("PriceClassID")).DataIndex("PriceClassID").Width(150).Editor(X.TextField().AllowBlank(true).MaxLength(6).EnforceMaxLength(true)),
            X.Column().Text(Util.GetLang("Descr")).DataIndex("Descr").Width(150).Editor(X.TextField().AllowBlank(false).MaxLength(50).EnforceMaxLength(true)),
            X.CommandColumn()
            .Width(150)
            .Commands(
                X.GridCommand()
                .Text(Util.GetLang("Reject"))
                .ToolTip(t => t.Text = Util.GetLang("Rejectrowchanges"))
                .CommandName("reject")
                .Icon(Icon.ArrowUndo)
            )
            .PrepareToolbar(t => t.Handler = "toolbar.items.get(0).setVisible(record.dirty);")
            .Listeners(l => l.Command.Handler = "grdOM_PriceClass_Reject(record);")
        )
        .SelectionModel(X.RowSelectionModel().ID("slmOM_PriceClass").Mode(SelectionMode.Multi))
        .BottomBar(
            X.PagingToolbar()
            .Items(
                X.Label("Page size:"),
                X.ToolbarSpacer(10),
                X.ComboBox()
                .Width(80)
                .Items("1", "2", "10", "20", "30", "50")
                .SelectedItems("50")
                .Listeners(l =>
                    {
                        l.Select.Fn = "HQ.grid.onPageSelect";                   
                    })
            )
            .Plugins(X.ProgressBarPager())
        )
        .Plugins(
            X.CellEditing()
            .ClicksToEdit(1)
            .Listeners(ls =>
            {
                ls.BeforeEdit.Fn = "grdOM_PriceClass_BeforeEdit";
                ls.Edit.Fn = "grdOM_PriceClass_Edit";
                ls.ValidateEdit.Fn = "grdOM_PriceClass_ValidateEdit";

            })
        )

        .Features(
            X.GridFilters()
                .Local(true)
                .Filters(
                    X.StringFilter().DataIndex("PriceClassID"),
                    X.StringFilter().DataIndex("Descr")
                )
        )
    )
))
