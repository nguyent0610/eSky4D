@using Ext.Net;
@using Ext.Net.MVC;
@using HQ.eSkyFramework;
@using HQ.eSkyFramework.HQControl;
@using OM22300;
@{
    Layout = null;
    var X = Html.X();
    var HQ = Html.HQ();
    ViewBag.Title = "OM22300";
   
}

@(
 Html.X().Viewport().Layout(LayoutType.Fit)
.Items(
        X.FormPanel()
        .Layout(LayoutType.Anchor)
        .ID("frmMain")
        .Border(false)
        .TrackResetOnLoad(true)
        .DefaultAnchor("100%")
        .BodyPadding(2)
        .TopBar(Util.SetupToolbar("Print", true))
        .KeyMap(Util.SetupKeyMap())
        .FieldDefaults(act => { act.LabelAlign = LabelAlign.Right; act.LabelWidth = 100; })
        .Listeners(l =>
                    {
                        l.BoxReady.Handler = "firstLoad();";
                        l.FieldChange.Fn = "frmChange"; 
                                                
                    })
        .Items(
            X.Panel().ID("pnlHeader").Layout(LayoutType.VBox).Border(false).AutoScroll(true)
            .Listeners(lst =>
                {
                    lst.Render.Handler = "HQ.common.control_render(this,'header')";
                    lst.Resize.Handler = "App.grdMailDetail.setAnchor(\"100% -\" + App.pnlHeader.getHeight());App.grdMailDetail.view.refresh();";
                })//focus header        
            .Items(
                X.Container().Layout(LayoutType.HBox).MarginSpec("0 0 0 0")
                    .Items(
                    HQ.Combo().ID("cboCustID").Name("cboCustID").HQLangCode("CustID").HQProcedure("OM22300_pcCustomerActive")
                    .HQColumnShow("CustID,Name,Addr1,Addr2").DisplayField("CustID").ValueField("CustID")
                    .Width(300).HQHeightWidth(400, 400).MarginSpec("5 0 0 0").Delimiter(";")
                    .HQDBSys(false).ForceSelection(true)
                    .LoadData()
                    .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                    .Listeners(lst =>
                        {
                            lst.TriggerClick.Handler = "if (index == 0) { this.clearValue();}";
                          
                        })

                    , HQ.Combo().ID("cboSlsPerID").Name("cboSlsPerID").HQLangCode("SlsPerID").HQProcedure("OM22300_pcSalesPerson")
                    .HQColumnShow("Slsperid,Name").DisplayField("Slsperid").ValueField("Slsperid")
                    .Width(300).HQHeightWidth(400, 300).MarginSpec("5 0 0 0").Delimiter(";")
                    .HQDBSys(false).ForceSelection(true)
                    .LoadData()
                    .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                    .Listeners(lst =>
                        {
                            lst.TriggerClick.Handler = "if (index == 0) { this.clearValue();}";

                        })
                    , HQ.Combo().ID("cboSlsRoute").Name("cboSlsRoute").HQLangCode("RouteID").HQProcedure("OM22300_pcSalesRouteID")
                    .HQColumnShow("SalesRoute,Descr").DisplayField("SalesRoute").ValueField("SalesRoute")
                    .Width(300).HQHeightWidth(400, 300).MarginSpec("5 0 0 0").Delimiter(";")
                    .HQDBSys(false).ForceSelection(true)
                     .HQParam(new StoreParameterCollection() { 
                                    new StoreParameter("@UserName", Current.UserName.ToString(), ParameterMode.Value),
                                    new StoreParameter("@LangID", Current.LangID.ToString(), ParameterMode.Value),
                                    new StoreParameter("@BranchID", Current.CpnyID.ToString(), ParameterMode.Value)
                            })
                    .LoadData()
                    .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                    .Listeners(lst =>
                        {
                            lst.TriggerClick.Handler = "if (index == 0) { this.clearValue();}";

                        })
                )

                , X.Container().Layout(LayoutType.HBox).MarginSpec("0 0 0 0")
                .Items(
                       HQ.DateField().ID("dtmFromDate").Name("dtmFromDate").HQLangCode("FROMDATE").DataIndex("DateTime")
                        .Width(300).MarginSpec("5 0 0 0").AllowBlank(false)
                      ,  HQ.DateField().ID("dtmToDate").Name("dtmToDate").HQLangCode("TODATE").DataIndex("DateTime")
                        .Width(300).MarginSpec("5 0 0 0").AllowBlank(false)
                    , HQ.Combo().ID("cboFreqType").Name("cboFreqType").HQLangCode("SlsFreqType").HQProcedure("OM22300_pcSalesFreq")
                    .HQColumnShow("Descr").DisplayField("Descr").ValueField("Code")
                    .Width(300).HQHeightWidth(400, 300).MarginSpec("5 0 0 0").Delimiter(";")
                    .HQDBSys(false).ForceSelection(true)
                    .LoadData()
                    .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                    .Listeners(lst =>
                        {
                            lst.TriggerClick.Handler = "if (index == 0) { this.clearValue();}";
                       
                        })
                        ,HQ.Button().ID("btnLoad").HQLangCode("LoadData").Width(150).MarginSpec("5 0 0 20")
                         .Listeners(lst =>
                        {
                          
                            lst.Click.Fn = "btnLoad_Click";
                           
                        })

                )

            )//end header

            , Html.X().GridPanel()
            .Listeners(lst =>
                {
                    lst.Render.Handler = "HQ.common.control_render(this,'grdMailDetail');";                     
                })//focus grid 
            .Layout(LayoutType.Fit)
            .MarginSpec("5 0 0 0")
            .Anchor("100% -170")// WIDTH HEIGHT                 
            .RenderTo("contentCenter")
            .View(X.GridView().TrackOver(false))
            .ID("grdMailDetail").SetAutoScroll(true)
            .SelectionMemory(false)
            .Store(
                X.Store().ID("stoMailDetail")
                .Model(Util.GenerateModel(typeof(OM22300_pgLoadPJPDet_Result), "OM_SalesRouteDetModel", "SalesRouteID,CustID,SlsPerID,VisitDate,BranchID", true))
                .PageSize(50)
                .ServerProxy(X.AjaxProxy().Url(Url.Action("GetPJPDetail", "OM22300"))).AutoLoad(false)
                .Parameters(ps =>
                                {
                                    ps.Add(new StoreParameter("SalesRouteID", "App.cboSlsRoute.value", ParameterMode.Raw));
                                    ps.Add(new StoreParameter("CustID", "App.cboCustID.value", ParameterMode.Raw));
                                    ps.Add(new StoreParameter("SlsPerID", "App.cboSlsPerID.value", ParameterMode.Raw));
                                    ps.Add(new StoreParameter("FromDate", "App.dtmFromDate.value", ParameterMode.Raw));
                                    ps.Add(new StoreParameter("ToDate", "App.dtmToDate.value", ParameterMode.Raw));
                                    ps.Add(new StoreParameter("SlsFreqType", "App.cboFreqType.value", ParameterMode.Raw));
                             
                                })
                    .Listeners(l => { l.Load.Fn = "loadDataAutoDetail";})
                )
            .SortableColumns(false)                     
            .ColumnModel(
                Html.X().RowNumbererColumn()
                   , Html.X().Column().Text(Util.GetLang("VisitDate")).Width(150).DataIndex("VisitDate")
                    .Editor(
                     HQ.DateField().ID("dtmVisitDate").Name("dtmVisitDate").HQLangCode("VisitDate").DataIndex("VisitDate")
                        .Width(200).MarginSpec("5 0 0 0").AllowBlank(false)
                        )
                        
                    , Html.X().Column().Text(Util.GetLang("Week")).DataIndex("WeekNbr").Width(150)
                    .Editor(Html.X().TextField())

                    , Html.X().Column().Text(Util.GetLang("DayofWeek")).DataIndex("DayofWeek").Width(150)
                    .Editor(Html.X().TextField())
                    
                    , Html.X().Column().Text(Util.GetLang("SlsFreqType")).DataIndex("SlsFreqType").Width(150)
                    .Editor(Html.X().TextField())

                    , Html.X().Column().Text(Util.GetLang("SlsFreq")).DataIndex("SlsFreq").Width(150)
                    .Editor(Html.X().TextField())
                    
               , Html.X().Column().Text(Util.GetLang("RouteID")).Width(150).DataIndex("SalesRouteID")
                    .Editor(
                     HQ.Combo().ID("cboRoute").Name("cboRoute").HQProcedure("OM22300_pcSalesRouteID")
                    .HQColumnShow("SalesRoute,Descr").DisplayField("SalesRoute").ValueField("SalesRoute")
                    .Width(300).HQHeightWidth(500, 400)
                    .HQDBSys(false)
                     .HQParam(new StoreParameterCollection() { 
                                    new StoreParameter("@UserName", Current.UserName.ToString(), ParameterMode.Value),
                                    new StoreParameter("@LangID", Current.LangID.ToString(), ParameterMode.Value),
                                    new StoreParameter("@BranchID", Current.CpnyID.ToString(), ParameterMode.Value)
                            })
                    .HQParam(new StoreParameterCollection() {                     
                        new StoreParameter("@UserName", Current.UserName.ToString(), ParameterMode.Value),
                        new StoreParameter("@LangID", Current.LangID.ToString(), ParameterMode.Value),
                        new StoreParameter("@BranchID", Current.CpnyID.ToString(), ParameterMode.Value)
                    })
                      .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                     .Listeners(lst =>
                        {
                            //lst.Change.Fn = "cboReportID_Change";
                            lst.TriggerClick.Handler = "if (index == 0) { this.clearValue();}";

                        })
                    .LoadData()
                    )

                , Html.X().Column().Text(Util.GetLang("SlsPerID")).Width(150).DataIndex("SlsPerID")
                    .Editor(
                    HQ.Combo().ID("cboGSlsPerID").Name("cboGSlsPerID").HQProcedure("OM22300_pcSalesPerson")
                        .HQColumnShow("Slsperid,Name").DisplayField("Name").ValueField("Slsperid")
                        .Width(300).HQHeightWidth(500, 400)
                        .HQDBSys(false)
                        .HQParam(new StoreParameterCollection() { 
                                    new StoreParameter("@UserName", Current.UserName.ToString(), ParameterMode.Value),
                                    new StoreParameter("@LangID", Current.LangID.ToString(), ParameterMode.Value),
                                    new StoreParameter("@BranchID", Current.CpnyID.ToString(), ParameterMode.Value)
                            })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                                .Listeners(lst =>
                                {
                                    lst.TriggerClick.Handler = "if (index == 0) { this.clearValue();}";

                                })
                        .LoadData()
                        )
                        
                       , Html.X().Column().Text(Util.GetLang("CustID")).Width(150).DataIndex("CustID")
                    .Editor(
                    HQ.Combo().ID("cboGCustID").Name("cboGCustID").HQProcedure("OM22300_pcCustomerActive")
                        .HQColumnShow("CustID,Name,Addr1,Addr2").DisplayField("Name").ValueField("Slsperid")
                        .Width(300).HQHeightWidth(500, 400)
                        .HQDBSys(false)
                        .HQParam(new StoreParameterCollection() { 
                                    new StoreParameter("@UserName", Current.UserName.ToString(), ParameterMode.Value),
                                    new StoreParameter("@LangID", Current.LangID.ToString(), ParameterMode.Value),
                                    new StoreParameter("@BranchID", Current.CpnyID.ToString(), ParameterMode.Value)
                            })
                        .Triggers(new FieldTrigger() { Icon = TriggerIcon.Clear, HideTrigger = false })
                                .Listeners(lst =>
                                {
                                    lst.TriggerClick.Handler = "if (index == 0) { this.clearValue();}";

                                })
                        .LoadData()
                        )
                , Html.X().Column().Text(Util.GetLang("WeekofVisit")).DataIndex("WeekofVisit").Width(150)
                    .Editor(Html.X().TextField())
                    
                , Html.X().NumberColumn().Format("0,000").Text(Util.GetLang("VisitSort")).DataIndex("VisitSort").Width(150).Align(Alignment.Right)
                    .Editor(Html.X().NumberField().DecimalPrecision(0))

                //, Html.X().CommandColumn().Width(150)
                //    .Commands(
                //        Html.X().GridCommand()
                //            .Text(Util.GetLang("Reject"))
                //            .ToolTip(t =>
                //            {
                //                t.Text = Util.GetLang("Rejectrowchanges");
                //            })
                //            .CommandName("reject")
                //            .Icon(Icon.ArrowUndo)
                //    )
                //    .PrepareToolbar(t =>
                //    {
                //        t.Handler = "toolbar.items.get(0).setVisible(record.dirty);";
                //    })
                //    .Listeners(l =>
                //    {
                //        l.Command.Handler = "grdMailDetail_Reject(record);";
                //    })
            )
            .SelectionModel(X.RowSelectionModel().ID("slmMailDetail").Mode(SelectionMode.Multi))
            .BottomBar(
                X.PagingToolbar().ID("pag")
                .Items(
                    X.Label(Util.GetLang("PageSize")),
                    X.ToolbarSpacer(10),
                    X.ComboBox()
                    .Width(80)
                    .Items("1", "2", "10", "20", "30", "50")
                    .SelectedItems("50")
                    .Listeners(l =>
                        {
                            l.Select.Fn = "HQ.grid.onPageSelect";
                        })
                )
                .Plugins(X.ProgressBarPager().ID("pagDetail"))
            )
            .Plugins(
                X.CellEditing()
                .ClicksToEdit(1)
                .Listeners(ls =>
                {
                    ls.BeforeEdit.Fn = "grdMailDetail_BeforeEdit";
                    ls.Edit.Fn = "grdMailDetail_Edit";
                    ls.ValidateEdit.Fn = "grdMailDetail_ValidateEdit";
                })
            )
            .Features(
                X.GridFilters()
                    .Local(true)
                    .Filters(
                        Html.X().DateFilter().DataIndex("VisitDate"),
                        Html.X().StringFilter().DataIndex("WeekNbr"),
                        Html.X().StringFilter().DataIndex("DayofWeek"),
                        Html.X().StringFilter().DataIndex("SlsFreqType"),
                        Html.X().StringFilter().DataIndex("SlsFreq"),
                        Html.X().StringFilter().DataIndex("SalesRouteID"),
                        Html.X().StringFilter().DataIndex("SlsPerID"),
                        Html.X().StringFilter().DataIndex("CustID"),
                        Html.X().StringFilter().DataIndex("WeekofVisit"),
                        Html.X().NumericFilter().DataIndex("VisitSort")
                       
                    )
            )
        )
    )
)
